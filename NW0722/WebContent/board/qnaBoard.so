create table board(

    bNum  number(10) PRIMARY KEY , -- 고유넘버
    bOption nvarchar2(15), -- 취소, 교환, [상태]
    bAnswered nvarchar2(20) default '검토중', -- 답변상태
    bTitle nvarchar2(60) , --제목
    customerID nvarchar2(15) , -- 아이디
    bDate date default sysdate , -- 날짜
    bContent nvarchar2(2000) , -- 내용
    bHit number(10) default 0, -- 조회수
    bCondition nvarchar2(6) default 0, -- 비밀글여부
    bPw nvarchar2(20) default 0, --비밀글비번
    bGroup number(10) default 0, -- 그룹[사용안함]
    bStep number(10) default 0,-- 그룹[사용안함]
    bIndent number(10) default 0,-- 그룹[사용안함]
    bDel nvarchar2(6) default 'n', --삭제여부 n이 기본 y가 삭제상태
    bEtc1 nvarchar2(20) default 0 --기타 
    );
    
CREATE SEQUENCE  SEQ_BOARD
    MINVALUE 1
    MAXVALUE 999999
    INCREMENT BY 1
    START WITH 1
    CACHE 20
    NOORDER
    NOCYCLE ;
